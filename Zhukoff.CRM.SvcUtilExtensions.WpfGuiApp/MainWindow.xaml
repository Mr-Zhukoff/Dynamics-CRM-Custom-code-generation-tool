<Window x:Class="Zhukoff.CRM.SvcUtilExtensions.WpfGuiApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Zhukoff.CRM.SvcUtilExtensions.WpfGuiApp"
        mc:Ignorable="d" Height="640" Width="480" MinHeight="640" MinWidth="480" WindowStartupLocation="CenterScreen" Title="CrmSvcUtil GUI">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <TextBlock x:Name="txtHeader"  Grid.Row="0" Text="CrmSvcUtil GUI" FontSize="24" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        <Grid Grid.Row="1">
            <TextBox x:Name="textBox" HorizontalAlignment="Left" Height="23" Margin="92,38,0,0" TextWrapping="Wrap" Text="http://servername/orgname/" VerticalAlignment="Top" Width="228"/>
            <TextBlock HorizontalAlignment="Left" Margin="17,39,0,0" TextWrapping="Wrap" Text="CRM address" VerticalAlignment="Top"/>
            <Button x:Name="btnConnectToCrm" Content="Connect" HorizontalAlignment="Left" Margin="325,41,0,0" VerticalAlignment="Top" Width="75"/>

        </Grid>
        <StatusBar x:Name="statusBar" Grid.Row="2" Height="15" Margin="0" VerticalAlignment="Bottom">
            
        </StatusBar>

    </Grid>
</Window>
